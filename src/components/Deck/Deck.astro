---
import Layout from '../../layouts/Layout.astro';
import DeckLogo from '../Logo/Logo.astro'
import "reveal.js/dist/reveal.css";
import "reveal.js/dist/theme/black.css";
import "reveal.js/plugin/highlight/monokai.css";
import './deck.css'
import 'highlight.js/styles/night-owl.css';

const { slides, title } = Astro.props

let content = ``

slides.forEach(slide => {
  content += `${slide.rawContent()}<br>`
})
---

<Layout title={title}>
  <main class="reveal deck markdown-deck">
    <div class="slides">
      <section data-markdown data-seperator-notes="Note:">
        <textarea data-template>
          {content}
        </textarea>
      </section>
    </div>
  </main>
  <DeckLogo />
</Layout>

<!-- <style>
  @import "open-props/style";
</style> -->

<script>
  import Reveal from 'reveal.js'
  import Markdown from 'reveal.js/plugin/markdown/markdown.esm.js'
  import RevealHighlight from 'reveal.js/plugin/highlight/highlight.esm.js'
  import Splitting from 'splitting'

  const DECKS = document.querySelectorAll('.markdown-deck')
  DECKS.forEach(DECK => {
    let newDeck = new Reveal(DECK, {
      plugins: [Markdown, RevealHighlight],
      hash: true,
    })
    newDeck.initialize()
  })
</script>